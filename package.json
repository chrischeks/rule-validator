{
  "name": "accion-api",
  "version": "1.0.0",
  "description": "accion api",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "RubikPay",
  "license": "ISC",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "tsc-watch --onSuccess \"node ./dist/server.js production\"",
    "start:staging": "tsc-watch --onSuccess \"node ./dist/server.js staging\"",
    "start:dev": "tsc-watch --onSuccess \"node ./dist/server.js development\"",
    "start:dev:debug": "tsc-watch --onSuccess \"node --inspect ./dist/server.js\"",
    "build": "yarn prepare && yarn rm-dist && yarn build-ts && yarn copy-assets",
    "serve": "node dist/server.js",
    "prepare": "chmod +x ./scripts/*",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "rm-dist": "./scripts/rm-dist.sh",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-assets": "./scripts/copy-assets.sh",
    "debug": "yarn build && yarn watch:debug",
    "serve:debug": "nodemon --inspect dist/server.js",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve:debug\"",
    "code:check": "yarn code:lint; yarn code:format --check",
    "code:clean": "yarn code:lint --fix; yarn code:format --write",
    "code:lint": "eslint --ext .js,.jsx,.ts,.tsx \"src/\"",
    "code:format": "prettier './src/**/**.{js,jsx,ts,tsx}'",
    "code:check:rules": "eslint --print-config .eslintrc.js | eslint-config-prettier-check"
  },
  "dependencies": {
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "helmet": "^4.4.1",
    "joi": "^17.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.1",
    "@types/cors": "^2.8.6",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/supertest": "^2.0.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.3.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "poetic": "^1.5.0",
    "pre-push": "^0.1.1",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "ts-watch": "^1.0.8",
    "tsc-watch": "^4.2.8",
    "typescript": "^4.1.3"
  }
}
